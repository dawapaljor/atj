---
import Container from "../components/Container.astro"
import Layout from '../layouts/Layout.astro';
import { Picture } from "astro:assets";

const { frontmatter } = Astro.props;

---

<Layout title="About">
	<main class="space-y-20">
        
		<Container>
            <div class="relative flex flex-col-reverse items-center md:flex-row " >
                <main class="p-4">

                    <h1 class="">{frontmatter.title}</h1>
                
                    <p class="text-gray-600">{frontmatter.pubDate.toString().slice(0,10)}</p>
                    
                    <p class="italic">{frontmatter.description}</p>
                
                    <p class="font-semibold">Written by: {frontmatter.author}</p>
                
                    <Picture formats={['avif', 'webp']} src={frontmatter.image} alt={frontmatter.imageAlt} width="600" height="400" class="w-72 mx-auto my-4" />
                
                    <slot />
                
                  </main>
                
</div>
<!---------- Accordion -->



  
  
<!---------- Accordion Ends -->

        </Container>
      
	</main>
</Layout>